TEST_CMD='
if [ -f pnpm-lock.yaml ]; then pnpm -s test;
elif [ -f package-lock.json ]; then npm test;
elif [ -f yarn.lock ]; then yarn test;
elif [ -f pyproject.toml ] || [ -f requirements.txt ]; then pytest -q;
else echo "no tests"; fi
'

